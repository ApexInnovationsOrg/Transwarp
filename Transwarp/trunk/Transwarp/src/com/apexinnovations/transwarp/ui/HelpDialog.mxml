<?xml version="1.0" encoding="utf-8"?>
<ui:DialogBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx"
			  xmlns:ui="com.apexinnovations.transwarp.ui.*"
			  title="Help"
			  contentCreationComplete="contentCreationComplete(event);">
	<fx:Script>
		<![CDATA[
			import com.apexinnovations.transwarp.data.Courseware;
			import com.apexinnovations.transwarp.data.HelpPage;
			import com.apexinnovations.transwarp.events.HelpSelectionEvent;
			import com.apexinnovations.transwarp.ui.HelpButton;
			import com.apexinnovations.transwarp.utils.TranswarpVersion;
			
			import mx.managers.PopUpManager;

			TranswarpVersion.revision = "$Rev$";
			
			override protected function addedToStage(event:Event):void {
				super.addedToStage(event);
				addEventListener(HelpSelectionEvent.HELP_SELECTION_CHANGED, helpSelected);
			}
			
			override protected function closeHandler(event:Event):void {
				currentState = "default";
				movieClipLoader.source = '';
				super.closeHandler(event);
			}
			
			protected function contentCreationComplete(event:Event):void {
				updateElementList();
			}
			
			protected function updateElementList():void {
				if (elementList) {
					elementList.removeAllElements();
				
					for each(var h:HelpPage in Courseware.instance.product.helpPages) {
						var btn:HelpButton = new HelpButton();
						elementList.addElement(btn);
						btn.help = h;
					}
				}
			}
			
			protected function helpSelected(event:HelpSelectionEvent):void {
				var help:HelpPage = event.help;

				helpTitle.text = help.name;
				movieClipLoader.source = help.url;
			}
			
			protected function helpLoaded(event:Event):void {
				currentState = "showing_help";
			}
			
			protected function helpLoadingError(event:Event):void {
				currentState = "error";
				helpTitle.text='ERROR LOADING HELP';
			}
			
			protected function backHandler(event:Event):void {
				helpTitle.text = "Click a help topic below for more help on the subject:";
				currentState = "default";
				movieClipLoader.source = '';

				PopUpManager.centerPopUp(this);
			}
		]]>
	</fx:Script>
		
	<ui:states>
		<s:State name="default" />
		<s:State name="showing_help" />
		<s:State name="error" />
	</ui:states>

<!--
	<ui:transitions>
		<s:Transition fromState="showing_help" toState="default">
			<s:Parallel>
				<s:Fade target="{this}" />
				<s:Resize target="{this}" />
				<s:Move target="{this}" autoCenterTransform="true" />
			</s:Parallel>
		</s:Transition>
	</ui:transitions>
-->
	
	<s:VGroup paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10" >
		<s:Label id="helpTitle" text="Click a help topic below for more help on the subject:" fontWeight="bold" fontSize.showing_help="18" color.error="0xFF0000" />
		<s:Scroller id="scroller" horizontalScrollPolicy="off" maxHeight="300" visible.showing_help="false" width.showing_help="0" height.showing_help="0" >
			<s:VGroup id="elementList" width="100%" paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" >
			</s:VGroup>
		</s:Scroller>
		<s:SWFLoader id="movieClipLoader" autoLoad="true" complete="helpLoaded(event);" ioError="helpLoadingError(event)" securityError="helpLoadingError(event);" updateComplete="PopUpManager.centerPopUp(this);" visible.default="false" visible.error="false" width.default="0" height.default="0" width.error="0" height.error="0" showBusyCursor="true" />
		<s:HGroup verticalAlign="bottom" horizontalAlign="center" width="100%" paddingLeft="10" paddingRight="10" paddingBottom="10" paddingTop="10" visible.default="false" visible.error="false" width.default="0" height.default="0" width.error="0" height.error="0" >
			<s:Button label="Back" click="backHandler(event);" visible.default="false" width.default="0" height.default="0" />
		</s:HGroup>
	</s:VGroup>	
</ui:DialogBox>
