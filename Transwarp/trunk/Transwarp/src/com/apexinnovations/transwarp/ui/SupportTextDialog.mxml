<?xml version="1.0" encoding="utf-8"?>
<ui:DialogBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx"
			  xmlns:ui="com.apexinnovations.transwarp.ui.*"
			  width="400" minHeight="300" maxHeight="500">
	<fx:Script>
		<![CDATA[
			import com.apexinnovations.transwarp.data.Page;
			import com.apexinnovations.transwarp.utils.TranswarpVersion;
			
			import flashx.textLayout.elements.TextFlow;
			
			TranswarpVersion.revision = "$Rev$";
			
			[Bindable] protected var _page:Page = null;
			
			public function set page(p:Page):void {
				_page = p;
				if(theText) theText.textFlow = p.supportText;
			}
		]]>
	</fx:Script>
	
	<s:VGroup paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10" >
		<s:HGroup gap="2">
			<s:Label text="{_page.parentFolders}" fontWeight="bold" color="0x0000FF" />			
			<s:Label text="{_page.name}" fontWeight="bold" color="0x000000" />			
		</s:HGroup>
		<s:TextArea id="theText" width="380" paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5" editable="false" horizontalScrollPolicy="off" minHeight="250" maxHeight="450" >
		</s:TextArea>
	</s:VGroup>
</ui:DialogBox>
