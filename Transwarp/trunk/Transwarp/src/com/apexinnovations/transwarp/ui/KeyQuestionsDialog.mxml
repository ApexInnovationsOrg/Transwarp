<?xml version="1.0" encoding="utf-8"?>
<ui:DialogBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx"
			  xmlns:ui="com.apexinnovations.transwarp.ui.*"
			  width="400" minHeight="300">
	<fx:Script>
		<![CDATA[
			import com.apexinnovations.transwarp.data.Courseware;
			import com.apexinnovations.transwarp.data.Page;
			import com.apexinnovations.transwarp.data.Question;
			import com.apexinnovations.transwarp.ui.QuestionButton;
			import com.apexinnovations.transwarp.utils.TranswarpVersion;
			
			TranswarpVersion.revision = "$Rev$";
			
			[Bindable] protected var _page:Page = null;
			
			public function set page(p:Page):void {
				_page = p;

				elementList.removeAllElements();
				
				for each(var q:Question in _page.questions) {
					var btn:QuestionButton = new QuestionButton();
					elementList.addElement(btn);
					btn.question = q;
				}
			}
		]]>
	</fx:Script>
	
	<s:VGroup paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10" >
		<s:HGroup gap="2">
			<s:Label text="{_page.parentFolders}" fontWeight="bold" color="{Courseware.instance.color}" />			
			<s:Label text="{_page.name}" fontWeight="bold" color="0x000000" />			
		</s:HGroup>
		<s:Scroller horizontalScrollPolicy="off" maxHeight="300" >
			<s:VGroup id="elementList" width="360" paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" >
			</s:VGroup>
		</s:Scroller>
		<s:Label text="Click on a question to see its answer" fontStyle="italic" width="380" textAlign="right" color="0x0000FF" />
	</s:VGroup>
</ui:DialogBox>
