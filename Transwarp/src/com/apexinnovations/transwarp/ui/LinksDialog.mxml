<?xml version="1.0" encoding="utf-8"?>
<ui:DialogBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx"
			  xmlns:ui="com.apexinnovations.transwarp.ui.*"
			  width="400" minHeight="300" >
	<fx:Script>
		<![CDATA[
			import com.apexinnovations.transwarp.data.Page;
			import com.apexinnovations.transwarp.data.Link;
			import com.apexinnovations.transwarp.ui.LinkButton;
			import com.apexinnovations.transwarp.utils.TranswarpVersion;
			
			TranswarpVersion.revision = "$Rev$";

			[Bindable] protected var _page:Page = null;
			
			public function set page(p:Page):void {
				_page = p;
				if(linkList) initLinkList();
			}
			
			protected function initLinkList():void {
				for each(var l:Link in _page.links) {
					var b:LinkButton;
					
					b = new LinkButton();
					linkList.addElement(b);
					b.link = l;
				}
			}
		]]>
	</fx:Script>
	
	<s:VGroup paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10" >
		<s:HGroup gap="2">
			<s:Label text="{_page.parentFolders}" fontWeight="bold" color="0x0000FF" />			
			<s:Label text="{_page.name}" fontWeight="bold" color="0x000000" />			
		</s:HGroup>
		<s:Scroller horizontalScrollPolicy="off" maxHeight="300" >
			<s:VGroup id="linkList" width="360" paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" >
			</s:VGroup>
		</s:Scroller>
	</s:VGroup>
</ui:DialogBox>
