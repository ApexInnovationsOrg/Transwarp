<?xml version="1.0" encoding="utf-8"?>
<ui:DialogBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx"
			  xmlns:ui="com.apexinnovations.transwarp.ui.*"
			  title="Search Results">
	<fx:Script>
		<![CDATA[
			import com.apexinnovations.transwarp.data.Courseware;
			import com.apexinnovations.transwarp.data.Page;
			import com.apexinnovations.transwarp.ui.SearchResultButton;
			import com.apexinnovations.transwarp.utils.TranswarpVersion;
			
			import mx.managers.PopUpManager;

			TranswarpVersion.revision = "$Rev$";
			
			protected var _keywords:String = '';
			protected var _results:Vector.<Page> = null;
			
			public var anchor:DisplayObject = null;
			
			[Bindable] public function get keywords():String { return _keywords; }
			public function set keywords(words:String):void {
				_keywords = words;
				if(resultList) initResultList();
			}
			
			override public function display():void {
				if (!visible && anchor) {
					x = stage.stageWidth - width;
					y = anchor.height;
				}
				maxHeight = stage.stageHeight - y;
				visible = true;
				PopUpManager.bringToFront(this);
				setFocus();
			}
			
			protected function initResultList():void {
				_results = Courseware.search(_keywords);
				
				resultList.removeAllElements();
				
				for each(var p:Page in _results) {
					var b:SearchResultButton;
					
					b = new SearchResultButton();
					resultList.addElement(b);
					b.page = p;
				}
				currentState = _results.length ? "default" : "no_results";
			}
		]]>
	</fx:Script>

	<ui:states>
		<s:State name="default" />
		<s:State name="no_results" />
	</ui:states>

	<s:VGroup paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10" left="5" right="5">
		<s:HGroup gap="5">
			<s:Label text="Keyword(s):" fontWeight="bold" color="{Courseware.instance.color}" />			
			<s:Label text="{keywords}" fontWeight="bold" color="0x000000" />			
		</s:HGroup>
		<s:Label text="Pages are displayed in order of relevance" fontStyle="italic" width="380" textAlign="center" visible.default="true" visible.no_results="false" height.no_results="0" width.no_results="0" />
		<s:Label text="There are no results matching the keyword(s) you entered" width="380" fontSize="13" fontWeight="bold" textAlign="center" color="0xFF0000" paddingTop="10" paddingBottom="10" visible.default="false" height.default="0" width.default="0" />
		<s:Scroller id="scroller" horizontalScrollPolicy="off" maxHeight="{maxHeight - 60 - scroller.y}" visible.default="true" visible.no_results="false" height.no_results="0" >
			<s:VGroup id="resultList" width="100%" paddingTop="5" paddingBottom="5" paddingRight="5" visible.default="true" visible.no_results="false" >
			</s:VGroup>
		</s:Scroller>
		<s:Label text="Click on a result to go to that page" fontStyle="italic" width="380" textAlign="right" color="0x0000FF" visible.default="true" visible.no_results="false" height.no_results="0" />
	</s:VGroup>
</ui:DialogBox>
