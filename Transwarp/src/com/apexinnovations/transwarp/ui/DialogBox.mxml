<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   skinClass="com.apexinnovations.transwarp.skins.DialogSkin"
			   addedToStage="addedToStage(event);" close="closeHandler(event);" mouseDown="mouseDown(event);" windowMoveEnd="resizeListener(event);">
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	<fx:Script>
		<![CDATA[
			import com.apexinnovations.transwarp.Transwarp;
			import com.apexinnovations.transwarp.utils.TranswarpVersion;
			
			import mx.managers.PopUpManager;
			
			TranswarpVersion.revision = "$Rev$";
			
			protected var _initStageWidth:int;
			protected var _initStageHeight:int;
			
			// Event handler for the OK button.
			protected function okHandler(event:Event):void {
				// Do other stuff
				closeHandler(event);
			}
			
			// Event handler for the Cancel button.
			protected function cancelHandler(event:Event):void {
				closeHandler(event);
			}
			
			// Event handler for the close button.
			protected function closeHandler(event:Event):void {
				visible = false;
			}
			
			protected function addedToStage(event:Event):void {
				// Try to put the dialog back into viewable stage if window changes size
				stage.addEventListener(Event.RESIZE, resizeListener); 
			}
			
			protected function mouseDown(event:Event):void {
				PopUpManager.bringToFront(this);
				setFocus();
			}
			
			protected function resizeListener(event:Event):void {
				if (x > stage.stageWidth - width) x = stage.stageWidth - width;
				if (y > stage.stageHeight - height) y = stage.stageHeight - height;
				if (x < 0) x = 0;
				if (y < 0) y = 0;
			}
		]]>
	</fx:Script>
	<s:Group height="100%">
		
	</s:Group>
	<s:HGroup verticalAlign="bottom" horizontalAlign="center" width="100%" paddingLeft="10" paddingRight="10" paddingBottom="10" paddingTop="10">
		<s:Button label="OK" click="okHandler(event);"/>
		<s:Button label="Cancel" click="cancelHandler(event);"/>
	</s:HGroup>
</s:TitleWindow>
