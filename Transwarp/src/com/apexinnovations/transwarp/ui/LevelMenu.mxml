<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:graphics="com.apexinnovations.transwarp.graphics.*"
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="229" xmlns:tree="com.apexinnovations.transwarp.ui.tree.*">
	
	<fx:Script>
		<![CDATA[
			import com.apexinnovations.transwarp.graphics.*;
			import com.apexinnovations.transwarp.data.Courseware;
			import com.apexinnovations.transwarp.ui.tree.CourseList;
			
			import mx.collections.ArrayList;
			import mx.utils.ColorUtil;
			[Bindable] public var color:uint;
			[Bindable] protected var courseList:CourseList;
			
			override protected function createChildren():void {
				super.createChildren();
				courseList = new CourseList(Courseware.instance.currentCourse);
			}
			
		]]>
	</fx:Script>
	
	<s:Rect width="100%" height="100%" topRightRadiusX="12" bottomRightRadiusX="12">
		<s:fill>
			<s:LinearGradient rotation="90" >
				<s:GradientEntry color="0xeaeae9" />
				<s:GradientEntry color="0xcfd0d0" />
			</s:LinearGradient>
		</s:fill>
		<s:filters>
			<s:DropShadowFilter blurX="5" blurY="5" distance="5" alpha="0.09" angle="225" inner="true"/>
		</s:filters>
	</s:Rect>
	
	<s:VGroup id="headerGroup" top="0" width="100%" horizontalAlign="left">
		<!--  Header  -->
		<s:Rect width="100%" height="66" topRightRadiusX="12">
			<s:fill>
				<s:LinearGradient>
					<s:GradientEntry color="{ColorUtil.adjustBrightness2(color, -30)}"/>
					<s:GradientEntry color="{color}" />
				</s:LinearGradient>
			</s:fill>
			<s:filters>
				<s:DropShadowFilter blurX="5" blurY="5" distance="5" alpha="0.2" angle="225" inner="true"/> 
			</s:filters>
		</s:Rect>
	</s:VGroup>
	<s:VGroup id="menuGroup" top="72" left="20" width="100%" horizontalAlign="left" bottom="50" right="10">
		<tree:Tree width="100%" color="{color}" dataProvider="{courseList}" selectedItem="@{Courseware.instance.currentPage}">
			
		</tree:Tree>
	</s:VGroup>
	<!--  Footer  -->
	<s:VGroup width="100%" horizontalAlign="center" bottom="10">
		<graphics:ApexLogo/>
		<s:Label text="Copyright Â© 2011" color="0x888888" fontSize="8" />
	</s:VGroup>
</s:Group>
